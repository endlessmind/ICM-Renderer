<Window x:Class="ICM_Drawer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICM_Drawer"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="545" Background="#FFC9C9C9" UseLayoutRounding="True">
    <Grid>
        <Button x:Name="button" Content="Render" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Image x:Name="imgResult" Margin="0,50,0,0" VerticalAlignment="Center" Stretch="None" HorizontalAlignment="Center" SnapsToDevicePixels="True"/>

    </Grid>
</Window>
